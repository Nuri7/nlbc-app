<div class="container" style="margin-top: 30px;">
  <h5>All teams</h5>
  <hr>
  <% if Team.any? %>
    <%= button_to "Delete all teams", {controller: "teams", action:"delete_all"}, data:{disable_with: "Processing ..."}, class:"btn btn-danger" %>
  <% end %>
  <div class="row justify-content-md-left">
    <% @teams.each do |team| %>

        <div class="col-md-6">
          <div class="card" style="margin: 10px; padding: 10px;">
            <% team.users.each do |user| %>
              <p style="font-size: 14px;"><b>Name:</b> <%= "#{user.first_name} #{user.last_name}" %></p>
              <p style="font-size: 14px;"><b>Email:</b> <%= user.email %></p>
            <% end %>
            <%= link_to 'Open team', team_path(team), class:"btn btn-default" %>
          </div>
        </div>

    <% end %>
  </div>
</div>
