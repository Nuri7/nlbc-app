<div class="container" style="margin-top: 30px;">
  <h5>Feedbacks for <%= @bootcamp_name.title.titleize %></h5>
  <hr>
  <% @feedbacks.each do |feedback| %>
  <div class="row justify-content-md-center">
    <div class="col-md-6">
      <div class="card" style="margin: 10px;">
        <form style="padding: 10px;">
          <div class="form-group">
            <label>Name</label>
            <input type="text" value="<%= feedback.name %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>Company and position</label>
            <input type="text" value="<%= feedback.company_and_position %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>On a scale from 1(negative) to 10(positive) I rate the bootcamp with a</label>
            <input type="text" value="<%= feedback.rate_bootcamp %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>I got the most value out of this part of the bootcamp</label>
            <input type="text" value="<%= feedback.most_value %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>I got the least value out of this part of the bootcamp</label>
            <input type="text" value="<%= feedback.least %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>After this bootcamp Im planning to</label>
            <input type="text" value="<%= feedback.plans %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>Three words to describe this bootcamp</label>
            <input type="text" value="<%= feedback.describe_bootcamp %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>On a scale from 1(negative) to 10(positive) I rate the trainer with a</label>
            <input type="text" value="<%= feedback.rate_trainer %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>Suggestion / tips / compliments to the trainer</label>
            <input type="text" value="<%= feedback.tips_to_trainer %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>Additional suggestion / remarks</label>
            <input type="text" value="<%= feedback.suggestion %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>Are there any other Bootcamps you would like to have or are interested in?</label>
            <input type="text" value="<%= feedback.other_bootcamps %>" disabled class="form-control">
          </div>

          <div class="form-group">
            <label>Can we contact you for (discounted/beta) bootcamps?</label>
            <input type="text" value="<%= feedback.contact %>" disabled class="form-control">
          </div>
        </form>
      </div>

    </div>
  </div>
  <% end %>
  <%= will_paginate @feedbacks, renderer: BootstrapPagination::Rails %>
</div>
